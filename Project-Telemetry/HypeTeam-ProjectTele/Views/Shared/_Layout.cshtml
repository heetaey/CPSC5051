<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0/dist/Chart.min.js"></script>
    <title>@ViewBag.Title - HypeTelemetry</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/addons/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</head>
<body>
    <!--<div class="navbar navbar-inverse navbar-fixed-top">-->
    <nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
        @Html.ActionLink("HypeTelemetry", "Index", "Home", new { area = "" }, new { @class = "navbar-brand col-sm-3 col-md-2 mr-0" })
        <ul class="navbar-nav px-3">
            <li class="nav-item text-nowrap">
                <a class="nav-link" href="#">Sign out</a>
            </li>
        </ul>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            @Html.ActionLink("Dashboard", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Report", "Index", "Report", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <div class="col-md-9 ml-sm-auto col-lg-10 px-4">
            @RenderBody()
            <hr />
            <footer align="right">
                <div>&copy; @DateTime.Now.Year - HypeTelemtry</div>
                <div><a href="mailto: abc@seattleu.edu">Contact Admin</a></div>
            </footer>
        </div>
    </div>

    <script src="Scripts/popper.min.js"></script>
    <script src="Scripts/mdb.min.js"></script>
    <script src="Scripts/addons/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
            $('.dataTables_length').addClass('bs-select');
        });
    </script>
</body>
</html>
