@using HypeTeam_ProjectTele.Models;
@model LogModel

<div class="container mt-3">
    <h2>Delete @Html.DisplayFor(m => m.ID)</h2>
    <div class="row">
        <div class="col-3 text-right">
            @Html.DisplayNameFor(m => m.Value)
        </div>
        <div class="col">
            @Html.DisplayFor(m => m.Value)
        </div>
    </div>

    <div class="row">
        <div class="col-3 text-right">
            @Html.DisplayNameFor(m => m.PhoneID)
        </div>
        <div class="col">
            @Html.DisplayFor(m => m.PhoneID)
        </div>
    </div>


    <div class="row">
        <div class="col-3 text-right">
            @Html.DisplayNameFor(m => m.RecordedDateTime)
        </div>
        <div class="col">
            @Html.DisplayFor(m => m.RecordedDateTime)
        </div>
    </div>


    <br />
    <br />
    <div>
        <h5>Do you want to delete this record?</h5>
        @using (Html.BeginForm(FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.ID)

            @Html.ActionLink("Cancel", "Index", "Report", new { @class = "btn btn-primary" })
            <input id="Submit" type="submit" value="Delete" class="btn btn-danger" />
        }
    </div>
</div>