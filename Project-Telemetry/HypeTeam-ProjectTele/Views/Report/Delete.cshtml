@using HypeTeam_ProjectTele.Models;
@model LogModel

<div class="mt-3">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h2>Delete</h2>
        <div class="btn-toolbar mb-2 mb-md-0">
            <p>Log ID: @Html.DisplayFor(m => m.ID)</p>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="form-group row">
                <label for="Value" class="col-sm-3 col-form-label">Bilirubin Level</label>
                <div class="col-sm-9">
                    @Html.DisplayFor(m => m.Value, new { htmlAttributes = new { @class = "form-control form-control-sm", @placeholder = "Bilirubin Level" } })
                </div>
            </div>

            <div class="form-group row">
                <label for="PhoneID" class="col-sm-3 col-form-label">Phone ID</label>
                <div class="col-sm-9">
                    @Html.DisplayFor(m => m.PhoneID, new { htmlAttributes = new { @class = "form-control form-control-sm", @placeholder = "Phone ID" } })
                </div>
            </div>

            <div class="form-group row">
                <label for="AppVersion" class="col-sm-3 col-form-label">App Version</label>
                <div class="col-sm-9">
                    @Html.DisplayFor(m => m.AppVersion, new { htmlAttributes = new { @class = "form-control form-control-sm", @placeholder = "App Version" } })
                </div>
            </div>
            <div class="form-group row">
                <label for="Location" class="col-sm-3 col-form-label">Location</label>
                <div class="col-sm-9">
                    @Html.DisplayFor(m => m.Location, new { htmlAttributes = new { @class = "form-control form-control-sm", @placeholder = "Location" } })
                </div>
            </div>
            <div class="form-group row">
                <label for="UserID" class="col-sm-3 col-form-label">User ID</label>
                <div class="col-sm-9">
                    @Html.DisplayFor(m => m.UserID, new { htmlAttributes = new { @class = "form-control form-control-sm", @placeholder = "User ID" } })
                </div>
            </div>
            <div class="text-right">
                @using (Html.BeginForm(FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.ID)

                    @Html.ActionLink("Cancel", "Read", "Report", new { id = Model.ID }, new { @class = "btn btn-outline-dark btn-sm" })
                    <input id="Submit" type="submit" value="Delete" class="btn btn-outline-danger btn-sm" />
                }
            </div>
        </div>
    </div>
</div>