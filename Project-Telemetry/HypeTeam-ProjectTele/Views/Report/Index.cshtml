@using HypeTeam_ProjectTele.Models;
@model ReportViewModel

<div class="mt-3">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Report</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="dropdown">
                <button class="btn btn-sm btn-outline-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Export
                </button>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">PDF</a>
                    <a class="dropdown-item" href="#">Excel</a>
                    <a class="dropdown-item" href="#">Word</a>
                </div>
            </div>
            
        </div>
    </div>
    <div class="card border-light">
        <div class="card-body">

            <table id="dataTable" class="table table-striped table-bordered table-sm table-hover">
                <thead>
                    <tr>
                        <th scope="col">
                            ID
                        </th>
                        <th scope="col">
                            Date
                        </th>
                        <th scope="col">
                            Bilirubin Level
                        </th>
                        <th scope="col">
                            Location
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var item in Model.LogViewModel.LogList)
                        {
                            <tr>
                                <td>@Html.ActionLink(item.ID, "Read", new { id = item.ID }, new { @class = "small" })</td>
                                <td>@item.RecordedDateTime.ToShortDateString()</td>
                                <td>@item.Value</td>
                                <td>@item.Location</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

            

            <div class="text-right">
                @Html.ActionLink("Create", "Create", "Report", new { @class = "btn btn-outline-dark btn-sm" })
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/addons/datatables.min.js"></script>
<script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                "pagingType": "numbers"
            });
            $('.dataTables_length').addClass('bs-select');
            $('#dtMaterialDesignExample_wrapper .dataTables_length').addClass('d-flex flex-row');
        });
</script>
