@using HypeTeam_ProjectTele.Models;
@model LogModel

<div class="mt-3">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h2>Report</h2>
        <div class="btn-toolbar mb-2 mb-md-0">
            <p>Log ID: @Html.DisplayFor(m => m.ID)</p>
        </div>
    </div>
    <div class="card-columns">
        <div class="card border-light">
            <h6 class="card-header">Patient Info</h6>
            <div class="card-body">
                <ul class="report-detail card-text">
                    <li>Patient ID: @Html.DisplayFor(m => m.PatientID)</li>
                    <li>Patient Age: @Html.DisplayFor(m => m.PatientAge) hours</li>
                    <li>Report Date: @Html.DisplayFor(m => m.RecordedDateTime)</li>
                </ul>
            </div>
        </div>

        <div class="card border-light">
            <h6 class="card-header">Device Info</h6>
            <div class="card-body">
                <ul class="report-detail card-text">
                    <li>Phone ID: @Html.DisplayFor(m => m.PhoneID)</li>
                    <li>Application Version: @Html.DisplayFor(m => m.AppVersion)</li>
                    <li>OS Version: @Html.DisplayFor(m => m.OsVersion)</li>
                </ul>
            </div>
        </div>

        <div class="card border-light">
            <h6 class="card-header">Test Info</h6>
            <div class="card-body">
                <ul class="report-detail card-text">
                    <li>Bilirubin Level: @Html.DisplayFor(m => m.Value)</li>
                    <li>
                        Recorded Levels:
                        <img src="~/Content/img/bilirubin.jpg" class="mx-auto d-blosck img-fluid img-thumbnail" />
                    </li>
                </ul>
            </div>
        </div>
        <div class="card border-light">
            <h6 class="card-header">Photo Info</h6>
            <div class="card-body">
                <ul class="report-detail card-text">
                    <li>Light Level: @Html.DisplayFor(m => m.LightLevel)</li>
                    <li>Saturation Level: @Html.DisplayFor(m => m.SaturationLevel)</li>
                    <li>Hue Level: @Html.DisplayFor(m => m.HueLevel)</li>
                    <li>
                        Recorded Photo:
                        <img src="~/Content/img/strip.PNG" class="mx-auto d-blosck img-fluid img-thumbnail" />
                    </li>
                </ul>
            </div>
        </div>
        <div class="card border-light">
            <h6 class="card-header">Clinic Info</h6>
            <div class="card-body">
                <ul class="report-detail card-text">
                    <li>Clinic ID: @Html.DisplayFor(m => m.ClinicID)</li>
                    <li>Clinic User ID: @Html.DisplayFor(m => m.UserID)</li>
                    <li>
                        Location: @Html.DisplayFor(m => m.Location)
                        <iframe frameborder="0" style="border:0; width:100%; height:250px"
                                src="https://www.google.com/maps/embed/v1/place?key=AIzaSyD4B1DjaKxOwMg0hm3j9OotSVe4PyEAXgk&q=@Html.DisplayFor(m => m.Location)"></iframe>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="float-left">
        @Html.ActionLink("Go Back", "Index", "Report", new { @class = "btn btn-outline-dark btn-sm" })
    </div>
    <div class="float-right">
        @Html.ActionLink("Update", "Update", "Report", new { id = Model.ID }, new { @class = "btn btn-outline-dark btn-sm" })
        @Html.ActionLink("Delete", "Delete", "Report", new { id = Model.ID }, new { @class = "btn btn-outline-danger btn-sm" })
    </div>
    <div class="clearfix"></div>
</div>