@using HypeTeam_ProjectTele.Models;
@model LogModel

@{
    ViewBag.Title = "Read";
}
<div class="container mt-3">
    <h2>
        <p>Report: Patient ID > @Html.DisplayFor(m => m.ID)</p>
    </h2>

    <div class="row">
        <div class="col-3 text-left">
            Bilirubin Level
        </div>
        <div class="col">
            @Html.DisplayFor(m => m.Value)
        </div>
    </div>

    <div class="row">
        <div class="col-3 text-left">
            Date of Test
        </div>
        <div class="col">
            @Html.DisplayFor(m => m.RecordedDateTime)
        </div>
    </div>

    <div class="row">
        <div class="col-3 text-left">
            Location of Test
        </div>
        <div class="col">
            @Html.DisplayFor(m => m.Location)
        </div>
    </div>

    <div class="row">
        <div class="col-3 text-left">
            Phone ID
        </div>
        <div class="col">
            @Html.DisplayFor(m => m.PhoneID)
        </div>
    </div>

    <div class="row">
        <div class="col-3 text-left">
            Application Version
        </div>
        <div class="col">
            @Html.DisplayFor(m => m.AppVersion)
        </div>
    </div>

    <div class="row">
        <div class="col-3 text-left">
            User ID
        </div>
        <div class="col">
            @Html.DisplayFor(m => m.UserID)
        </div>
    </div>

    <div class="row">
        <div class="col-3 text-left">
            Home Office Location
        </div>
        <div class="col">
            @Html.DisplayFor(m => m.PhoneHome)
        </div>
    </div>


    <div class="jumbotron">
        <h1>
            Recorded Levels
        </h1>
        <img src="~/Content/Img/lab standard spectrometer.JPG" class="mx-auto d-blosck img-fluid img-thumbnail" />
    </div>

    <br />
    <div>
        @Html.ActionLink("Update", "Update", "Report", new { id = Model.ID }, new { @class = "btn btn-warning" })
        @Html.ActionLink("Delete", "Delete", "Report", new { id = Model.ID }, new { @class = "btn btn-danger" })
    </div>
</div>