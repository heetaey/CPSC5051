@using HypeTeam_ProjectTele.Models;
@model LogModel

@{
    ViewBag.Title = "Read";
}
<div class="container mt-3">
    <h2>
        <p> @Html.ActionLink("Report", "Index", "Report", new { area = "" }, new { @class = "nav-link" }) > @Html.DisplayFor(m => m.ID)</p>
    </h2>

    <div class="row">
        <div class="col-3 text-right">
            Bilirubin Level
        </div>
        <div class="col">
            @Html.DisplayFor(m => m.Value)
        </div>
    </div>

    <div class="row">
        <div class="col-3 text-right">
            Phone ID
        </div>
        <div class="col">
            @Html.DisplayFor(m => m.PhoneID)
        </div>
    </div>


    <div class="row">
        <div class="col-3 text-right">
            Date
        </div>
        <div class="col">
            @Html.DisplayFor(m => m.RecordedDateTime)
        </div>
    </div>

    <div class="jumbotron">
        <img src="~/Content/Img/lab standard spectrometer.JPG" class="mx-auto d-blosck img-fluid img-thumbnail" />
    </div>

    <br />
    <div>
        @Html.ActionLink("Update", "Update", "Report", new { id = Model.ID }, new { @class = "btn btn-warning" })
        @Html.ActionLink("Delete", "Delete", "Report", new { id = Model.ID }, new { @class = "btn btn-danger" })
    </div>
</div>