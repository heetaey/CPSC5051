@model HypeTeam_ProjectTele.Models.UserLogin

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
<div class="container mt-3">
    <form action="/" method="post">
        <h2>Log In to Dashboard</h2>
        <div class="row">
            <div class="col-1">
                @Html.LabelFor(m => m.userID)
            </div>
            <div class="col-4">
                @Html.TextBoxFor(m => m.userID, new { placeholder = "Username" })
            </div>
        </div>
        <div class="row">
            <div class="col-1">
                @Html.LabelFor(m => m.password)
            </div>
            <div class="col-4">
                @Html.TextBoxFor(m => m.password, new { placeholder = "Password" })
            </div>
        </div>
        @Html.ActionLink("Login", "Index", "Home", new { @type = "submit", @class = "btn btn-outline-dark btn-sm" })

        @ViewBag.ErrorMessage
    </form>
</div>
}