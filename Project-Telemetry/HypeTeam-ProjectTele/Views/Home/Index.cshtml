@using HypeTeam_ProjectTele.Models;
@model HomeViewModel

<div class="mt-3 dashboard">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h2>Dashboard</h2>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
            </div>
            <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-calendar"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
                This week
            </button>
        </div>
    </div>

    <div class="card-deck mb-3">
        <div class="card border-light">
            <div class="card-body">
                <h6 class="card-title">Overview</h6>
                <hr />
                <canvas id="myChart" height="150"></canvas>
            </div>
        </div>
        <div class="card border-light">
            <div class="card-body">
                <h6 class="card-title">Photo Uploads</h6>
                <hr />
                <canvas id="photoUploads"></canvas>
            </div>
        </div>
    </div>

    <div class="card-columns">
        <div class="card border-light">
            <div class="card-body">
                <h6 class="card-title">New Logs</h6>
                <hr />
                <div class="new-logs text-center">
                    <h2>32</h2>
                    <div class="up-down">
                        <i class="fas fa-chevron-up"></i> 14%
                    </div>
                </div>
            </div>
        </div>

        <div class="card border-light">
            <div class="card-body">
                <h6 class="card-title">Operating Systems</h6>
                <hr />
                <canvas id="pieChart"></canvas>
            </div>
        </div>

        <div class="card border-light">
            <div class="card-body">
                <h6 class="card-title">Locations</h6>
                <hr />
                <canvas id="doughnutChart"></canvas>

            </div>
        </div>

        
    </div>
</div>

<script>
    var ctxL = document.getElementById("myChart").getContext('2d');
    var myLineChart = new Chart(ctxL, {
        type: 'line',
        data: {
            labels: ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
            datasets: [{
                label: "Number of New Patients",
                data: [21, 59, 80, 29, 46, 56, 5],
                backgroundColor: [
                    'rgba(105, 0, 132, .2)',
                ],
                borderColor: [
                    'rgba(200, 99, 132, .7)',
                ],
                borderWidth: 2
            },
            ]
        },
        options: {
            responsive: true
        }
    });

    var ctx = document.getElementById("pieChart");
    var myPieChart = new Chart(ctx, {
        type: 'pie',
        data: {
            datasets: [{
                data: [70, 19, 6, 8],
                backgroundColor: ["#F7464A", "#46BFBD", "#FDB45C", "#949FB1", "#4D5360"],
                hoverBackgroundColor: ["#FF5A5E", "#5AD3D1", "#FFC870", "#A8B3C5", "#616774"]
            }],
            labels: [
                '4.4',
                '5.2',
                '9.1',
                'Other'
            ]
        },
        options: {
            responsive: true,
            legend: {
                display: true,
                position: 'bottom'

            }

        }
    });


    var ctx2 = document.getElementById("photoUploads").getContext('2d');
    var myChart = new Chart(ctx2, {
        type: 'bar',
        data: {
            labels: ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
            datasets: [{
                label: '# of Photo Uploads',
                data: [12, 19, 3, 20, 5, 2, 3],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });

    var ctxD = document.getElementById("doughnutChart").getContext('2d');
    var myLineChart = new Chart(ctxD, {
        type: 'doughnut',
        data: {
            labels: ["Lagos, Nigeria", "Aba, Nigeria", "Abuja, Nigeria", "Dutse, Nigeria"],
            datasets: [{
                data: [51, 23, 10, 12],
                backgroundColor: ["rgba(219, 0, 0, 0.4)", "rgba(0, 165, 2, 0.4)", "rgba(255, 195, 15, 0.4)",
                    "rgba(55, 59, 66, 0.4)"
                ],
                hoverBackgroundColor: ["rgba(219, 0, 0, 0.2)", "rgba(0, 165, 2, 0.2)",
                    "rgba(255, 195, 15, 0.3)", "rgba(55, 59, 66, 0.1)"
                ]

            }]
        },
        options: {
            responsive: true,
            legend: {
                display: true,
                position: 'bottom'

            }
        }
        

    });
</script>